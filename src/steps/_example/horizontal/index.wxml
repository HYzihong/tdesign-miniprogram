<view class="demo-desc">Horizontal Numbered Step Bar</view>
<wxs module="_">
  module.exports.getText = function(value, curr) { if (value > curr) return 'Finished'; if (value == curr)
  return'Current'; return 'Undone'; }
</wxs>

<view class="block">
  <t-steps current="{{first}}" bind:change="onFirstChange">
    <t-step-item wx:for="{{4}}" wx:key="index" title="{{_.getText(first, index)}}" content="Content" />
  </t-steps>
</view>

<view class="demo-desc">Horizontal Step Bar with Icons</view>

<view class="block">
  <t-steps current="{{second}}" bind:change="onSecondChange">
    <t-step-item wx:for="{{4}}" wx:key="index" title="{{_.getText(second, index)}}" content="Content" icon="cart" />
  </t-steps>
</view>

<view class="demo-desc">Horizontal Simple Steps Bar</view>

<view class="block">
  <t-steps theme="dot" current="{{third}}" bind:change="onThirdChange">
    <t-step-item wx:for="{{4}}" wx:key="index" title="{{_.getText(third, index)}}" content="Content" />
  </t-steps>
</view>
