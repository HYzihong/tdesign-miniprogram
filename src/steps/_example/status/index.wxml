<wxs module="_">
  module.exports.getText = function(value, curr) { if (value > curr) return 'Finished'; if (value == curr)
  return'Error'; return 'Undone'; }
</wxs>

<view class="block">
  <t-steps current="{{first}}" bind:change="onFirstChange" current-status="error">
    <t-step-item wx:for="{{4}}" wx:key="index" title="{{_.getText(first, index)}}" content="content" />
  </t-steps>
</view>

<view class="block">
  <t-steps current="{{second}}" bind:change="onSecondChange" current-status="error">
    <t-step-item wx:for="{{4}}" wx:key="index" title="{{_.getText(second, index)}}" content="content" icon="cart" />
  </t-steps>
</view>

<view class="block">
  <t-steps theme="dot" current="{{third}}" bind:change="onThirdChange" current-status="error">
    <t-step-item wx:for="{{4}}" wx:key="index" title="{{_.getText(third, index)}}" content="content" />
  </t-steps>
</view>
