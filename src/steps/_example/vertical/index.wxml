<wxs module="_">
  module.exports.getText = function(value, curr) { if (value > curr) return 'Finished'; if (value == curr)
  return'Current'; return 'Undone'; }
</wxs>

<view class="demo-desc">Vertical Numbered Step Bar</view>

<view class="block">
  <t-steps layout="vertical" current="{{first}}" bind:change="onFirstChange">
    <t-step-item
      wx:for="{{4}}"
      wx:key="index"
      title="{{_.getText(first, index)}}"
      content="Content here can be Customized"
    />
  </t-steps>
</view>

<view class="demo-desc">Vertical Step Bar with Icons</view>

<view class="block">
  <t-steps layout="vertical" current="{{second}}" bind:change="onSecondChange">
    <t-step-item
      wx:for="{{4}}"
      wx:key="index"
      title="{{_.getText(second, index)}}"
      content="Content here can be Customized"
      icon="cart"
    />
  </t-steps>
</view>

<view class="demo-desc">Vertical Simple Step Bar</view>

<view class="block">
  <t-steps layout="vertical" theme="dot" current="{{third}}" bind:change="onThirdChange">
    <t-step-item
      wx:for="{{4}}"
      wx:key="index"
      title="{{_.getText(third, index)}}"
      content="Content here can be Customized"
    />
  </t-steps>
</view>

<view class="demo-desc">Vertical Step Bar with Custom Content</view>

<view class="block">
  <t-steps layout="vertical" current="{{third}}" bind:change="onThirdChange">
    <t-step-item
      wx:for="{{3}}"
      wx:key="index"
      title="{{_.getText(third, index)}}"
      content="Content here can be Customized"
    >
      <view wx:if="{{index == 1}}" slot="extra">
        <image src="https://tdesign.gtimg.com/mobile/demos/steps1.png" alt="图标" style="width: 100%" mode="widthFix" />
      </view>
    </t-step-item>
  </t-steps>
</view>
